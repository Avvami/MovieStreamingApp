<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieStreamingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pale_black</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pale_black</item>
        <item name="colorSecondaryVariant">@color/dark_grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginTextInputOuterFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/stroke_white</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Custom.TextInputLayout.Rounded</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/white_80p</item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:textColorHint">@color/white_40p</item>
        <item name="passwordToggleTint">@color/pass_toggle_white</item>
    </style>

    <style name="LoginTextInputInnerFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white_80p</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="RegisterTextInputOuterFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/stroke_black</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Custom.TextInputLayout.Rounded</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="errorIconDrawable">@null</item>
        <item name="android:textColorHint">@color/black_30p</item>
        <item name="passwordToggleTint">@color/pass_toggle_black</item>
    </style>

    <style name="RegisterTextInputInnerFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/black_55p</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textCursorDrawable">@drawable/cursor_black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.Custom.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="customToast">
        <item name="stFont">@font/inter_medium</item>
        <item name="stIconStart">@drawable/temp_icon</item>
        <item name="stRadius">6dp</item>
    </style>
    
    <style name="roundAvatar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="roundAvatarOutline">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>